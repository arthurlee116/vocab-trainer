# E2E测试环境变量配置

# 基础配置
BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:4000/api

# 测试用户配置
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPass123!

# Mock配置
USE_MOCK_API=true
MOCK_API_DELAY=0

# 性能测试配置
PERFORMANCE_TIMEOUT=30000
MEMORY_THRESHOLD=52428800  # 50MB in bytes

# 测试数据配置
TEST_WORDS_COUNT=5
TEST_DIFFICULTY=beginner
TEST_QUESTION_COUNT=15

# 网络配置
NETWORK_TIMEOUT=10000
RETRY_ATTEMPTS=3

# 报告配置
REPORT_OUTPUT_DIR=e2e-results
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true

# CI配置
CI_TIMEOUT=1800000  # 30 minutes
CI_PARALLEL_WORKERS=3
CI_RETRY_COUNT=2